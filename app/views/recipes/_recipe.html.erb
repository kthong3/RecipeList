<% if logged_in? %>
  <div class="recipe-box">
    <span class="index-image"><%= image_tag recipe.image.url(:thumb) %></span>
    <p class="index-title"><%= link_to recipe.title, recipe_path(recipe) %></p>
  </div>
<% else %>
  <div class="recipe-box">
    <span class="index-image"><%= image_tag recipe.image.url(:thumb) %></span>
    <p class="index-title"><%= recipe.title %></p>
  </div>
<% end %>
