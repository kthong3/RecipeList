<h1>Add a New Recipe </h1>

<div>
  <%= form_for @recipe do |f| %>
  <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
  </div>
  <div>
      <%= f.label :cook_time %>
      <%= f.text_field :cook_time %>
  </div>
  <div>
    <%= f.label :ingredients%>
  </div>
  <div>
    <%= f.label :instructions %>
    <%= f.text_area :instructions, placeholder: '1. Preheat oven to 350 degrees', size: '35x10' %>
  </div>
  <div>
      <%= f.submit 'Save' %>
  </div>
  <% end %>
</div>
