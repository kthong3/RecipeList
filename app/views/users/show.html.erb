<div class="container">
  <div class="header"><h1><%= @user.username %>'s Recipes</h1>
 <%= button_to 'Add New Recipe', new_recipe_path, method: :get %></div>

  <% @user.recipes.each do |recipe| %>
    <div class="recipe-box">
      <span class="index-image"><%= image_tag recipe.image.url(:thumb) %></span>
      <div class="index-title">
        <p ><%= link_to recipe.title, recipe_path(recipe) %></p>
        <p class="cook-time">Cook time: <%= recipe.cook_time %></p>
      </div>
    </div>
  <% end %>
</div>
